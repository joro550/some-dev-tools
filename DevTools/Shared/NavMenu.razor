<div class='top-row ps-3 navbar navbar-dark'>
    <div class='container-fluid'>
        <a class='navbar-brand' href=''>DevTools</a>
        <button title='Navigation menu' class='navbar-toggler' @onclick='ToggleNavMenu'>
            <span class='navbar-toggler-icon'></span>
        </button>
    </div>
</div>

<div  @onclick='ToggleNavMenu'>
    <nav class='flex-column'>
        <div class='nav-item px-3'>
            <NavLink class='nav-link' href='' Match='NavLinkMatch.All'>
                <span class='oi oi-home' aria-hidden='true'></span> Home
            </NavLink>
        </div>
        
        <CollapsableLinks>
            <TopLevelLink>
                <a class='nav-link dropdown-toggle' @onclick='context'>Encoding</a>
            </TopLevelLink>
            <Content>
                <div class='nav-item px-3'>
                    <NavLink class='nav-link' href='Base64/Encode'>
                        <span class='oi oi-plus' aria-hidden='true'></span> Base64 Encode
                    </NavLink>
                </div>

                <div class='nav-item px-3'>
                    <NavLink class='nav-link' href='Base64/Decode'>
                        <span class='oi oi-plus' aria-hidden='true'></span> Base64 Decode
                    </NavLink>
                </div>

                <div class='nav-item px-3'>
                    <NavLink class='nav-link' href='Url/Encode'>
                        <span class='oi oi-plus' aria-hidden='true'></span> Url Encode
                    </NavLink>
                </div>

                <div class='nav-item px-3'>
                    <NavLink class='nav-link' href='Url/Decode'>
                        <span class='oi oi-plus' aria-hidden='true'></span> Url Decode
                    </NavLink>
                </div>
            </Content>
        </CollapsableLinks>
        
        
        <CollapsableLinks>
            <TopLevelLink>
                 <a class='nav-link dropdown-toggle' @onclick='context'>Converters</a>
            </TopLevelLink>
            <Content>
                <div class='nav-item px-3'>
                    <NavLink class='nav-link' href='/Convert/Number-Base'>
                        <span class='oi oi-plus' aria-hidden='true'></span> Number Base
                    </NavLink>
                </div>
            </Content>
        </CollapsableLinks>
    </nav>
</div>

@code {
    private bool _collapseNavMenu = true;

    private string? NavMenuCssClass => _collapseNavMenu ? "collapse" : "";
    private void ToggleNavMenu() => _collapseNavMenu = !_collapseNavMenu;
}
