<div class='nav-item px-3'>
    @TopLevelLink(new EventCallback(null, Toggle))

    <div class='@CssClass'>
        @Content
    </div>
</div>
@code {

    [Parameter] public RenderFragment Content { get; set; } = null!;
    [Parameter] public RenderFragment<EventCallback> TopLevelLink { get; set; } = null!;
    
    private bool _collapse = true;
    private void Toggle() => _collapse = !_collapse;
    private string CssClass => _collapse ? "collapse" : "1";
}