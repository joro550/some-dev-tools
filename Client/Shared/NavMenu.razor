                <NavBarDropDownItem LinkAddress='/Generator/LoremIpsum' LinkText='Lorem Ipsum'/>
                <NavBarDropDownItem LinkAddress='/Generator/Csv' LinkText='Csv'/>
            </NavBarDropDown>

            <NavBarDropDown LinkText='Cryptography' IconClass='fa-solid fa-lock'>
                <NavBarDropDownItem LinkAddress='/Cryptography/Md5' LinkText='Md5'/>
